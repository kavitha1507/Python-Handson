n = 4  # Number of rows in the pattern

# Loop through rows
for i in range(n, 0, -1):
    # Print leading spaces
    for j in range(n, i, -1):
        print(" ", end="")

    # Print 1s and 0s
    for k in range(1, i * 2):
        if k % 2 == 0:
            print("0", end="")
        else:
            print("1", end="")

    # Move to the next line
    print()